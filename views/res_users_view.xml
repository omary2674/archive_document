<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.ui.view" id="view_users_form_archive_document">
        <field name="name">res.users.archive.document</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='access_rights']" position="after">
                <page string="Allowed Archive Documents" groups="archive_document.group_manager_archive_document">
                    <group>
                        <group>
                            <field name="cat_ids" widget="many2many_tags"/>
                            <field name="tag_ids" widget="many2many_tags"/>
                            <field name="sec_ids" widget="many2many_tags"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
