<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="archive_document_tree_view" model="ir.ui.view">
        <field name="name">archive.document.tree.view</field>
        <field name="model">archive.document</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <tree string="Archive Document">
                <field name="arc_code"/>
                <field name="doc_no"/>
                <field name="doc_date"/>
                <field name="doc_name"/>
                <field name="ref_no"/>
                <field name="ref_date"/>
                <field name="cat_id"/>
                <field name="sec_id"/>
                <field name="tag_id" widget="many2many_tags" />
                <field name="doc_file_name" invisible="1"/>
                <field name="doc_file" filename="doc_file_name" widget="binary" readonly="1"/>
            </tree>
        </field>
    </record>

    <!-- Search Archive Document view -->
    <record id="archive_document_search_view" model="ir.ui.view">
        <field name="name">archive.document.search.view</field>
        <field name="model">archive.document</field>
        <field name="arch" type="xml">
            <search>
                <field name="doc_no"/>
                <field name="doc_name"/>
                <field name="doc_date"/>
                <field name="ref_no"/>
                <field name="ref_date"/>
                <field name="doc_file_name"/>
                <field name="cat_id"/>
                <field name="tag_id"/>

                <group string="Group By">
                    <filter name="cat_id" string="Category" context="{'group_by':'cat_id'}"/>                    
                    <filter name="sec_id" string="Security" context="{'group_by':'sec_id'}"/>
                </group>
                <searchpanel>
                    <field name="cat_id" icon="fa-users"/>
                    <field name="sec_id" icon="fa-users"/>
                </searchpanel>
            </search>
        </field>
    </record>

    <record id="archive_document_kanban" model="ir.ui.view">
        <field name="name">archive.document.kanban</field>
        <field name="model">archive.document</field>
        <field name="arch" type="xml">
            <kanban default_group_by="cat_id">
                <field name="color"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_color_{{kanban_getcolor(record.color.raw_value)}}
                                                oe_kanban_global_click_edit oe_semantic_html_override
                                                oe_kanban_card {{record.group_fancy==1 ? 'oe_kanban_card_fancy' : ''}}">
                            <div class="oe_dropdown_kanban">
                                <!-- drop down menu-->
                                <div class="oe_dropdown_toggle">
                                    <i class="fa fa-bars fa-lg" title="Manage" aria-label="Manage"/>
                                    <ul class="oe_dropdown_menu">
                                        <li>
                                            <a type="delete">Delete</a>
                                        </li>
                                        <li>
                                            <ul class="oe_kanban_colorpicker" data-field="color"/>
                                        </li>
                                    </ul>
                                </div>
                                <div class="oe_clear"></div>
                            </div>
                            <div t-attf-class="oe_kanban_content">
                                <!--- title  -->
                                Name:
                                <field name="doc_name"/>
                                <br/>
                                No:
                                <field name="doc_no"/>
                                <br/>
                                Date:
                                <field name="doc_date"/>
                                <br/>
                                <field name="doc_file_name" invisible="1"/>
                                <field name="doc_file" filename="doc_file_name" widget="binary" readonly="1"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Define Bank LC Calendar view -->
    <record id="archive_document_calendar_view" model="ir.ui.view">
        <field name="name">archive.document.calendar</field>
        <field name="model">archive.document</field>
        <field name="arch" type="xml">
            <calendar string="Archive Document" date_start="doc_date" color="cat_id">
                <field name="doc_name"/>
                <field name="doc_no"/>
            </calendar>
        </field>
    </record>

    <!-- Define Bank LC Graph  -->
    <record id="archive_document_graph_view" model="ir.ui.view">
        <field name="name">archive.document.graph</field>
        <field name="model">archive.document</field>
        <field name="arch" type="xml">
            <graph string="Archive Document by Category" stacked="Fales">
                <field name="cat_id" group="True"/>
                <field name="doc_no" type="measure"/>
            </graph>
        </field>
    </record>

    <record id="archive_document_form_view" model="ir.ui.view">
        <field name="name">archive.document.form.view</field>
        <field name="model">archive.document</field>
        <field name="arch" type="xml">
            <form string="Bank LC">

                <sheet>
                    <div class="oe_title">
                        <h2><field name="arc_code"/></h2>
                    </div>
                    <group string="Archive Document">
                        <group>
                            <field name="doc_no"/>
                            <field name="doc_date"/>
                            <field name="doc_name"/>
                            <field name="ref_no"/>
                            <field name="ref_date"/>
                        </group>
                        <group>
                            <!--                            <field name="dept_id"/>-->
                            <field name="cat_id"/>
                            <field name="tag_id" widget="many2many_tags"
                                   options="{'color_field': 'color', 'no_create_edit': True}" placeholder="Tags..."/>
                            <field name="sec_id"/>
                            <field name="doc_file" filename="doc_file_name"/>
                            <field name="doc_file_name" invisible="1"/>
                        </group>
                    </group>
                    <group>
                        <field name="doc_description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

